<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">
<!--				
	Background - Based on photograph by Nicholas_T - http://www.flickr.com/photos/nicholas_t/424714251/in/pool-landscape-cc/
-->

<greeter>

    <!-- Background image -->
    <item type="pixmap">
        <normal file="background.jpg"/>
        <pos y="0" x="0" width="100%" height="100%"/>
    </item>
	<!-- the userlist image -->
	<item type="pixmap">
        	<normal file="facebox.png"/>
		<pos x="50%" y="43%" anchor="c"/>
	</item>
	<!-- the green image -->
	<item type="pixmap">
        <normal file="loginbox.png"/>
		<pos x="50%" y="50%" width="610" height="640" anchor="c"/>
	</item>

	<!-- labels etc. -->
	<item type="rect">
		<pos x="50%" y="50%" width="610" height="640" anchor="c"/>
		<box orientation="vertical" xpadding="0" ypadding="0">


			<item type="label" id="welcome-label">
				<pos x="50%" y="105" anchor="n"/>
				<normal font="Sans Bold 18" color="#ffffff"/>
				<stock type="welcome-label"/>
			</item>

			<item type="label">
				<pos x="445" y="112" anchor="n"/>
				<normal font="Sans 8" color="#ffffff"/>
				<text>%h</text>
			</item>
			
			<item type="label">
				<pos x="143" y="99" anchor="nw"/>
				<normal font="Sans 8" color="#ffffff"/>
				<text>%c</text>
			</item>
			
			<!-- Face Browser -->
			<item type="rect">
    			<normal color="#9B9B9B" alpha="0.00"/>
    			<pos anchor="n" x="50%" y="125" width="box" height="box"/>
    			<box orientation="vertical" min-width="200" max-width="200" 
					min-height="100" max-height="100" xpadding="0" ypadding="0" spacing="0">
      				<item type="list" id="userlist">
        				<pos anchor="nw" x="1" y="2" height="100" width="200"/>
        				<color iconcolor="#ddefe8" labelcolor="#ddefe8" alpha="0.00"/>
      				</item>
    			</box>
  			</item>
			
			

			<item type="rect">
				<pos x="0" y="0" width="674"/>
				<box orientation="horizontal">

					<item type="rect">
						<pos x="126" y="222" width="400"/>
	
						<box orientation="vertical">
						
							<!-- Password/Username Label -->
							<item type="label" id="pam-prompt">
								<pos x="157" y="10" anchor="ne"/>
								<normal font="Sans 8" color="#353535"/>
								<stock type="username-label"/>
							</item>
						
							<!-- Password/Username Entry-->
						          <item type="pixmap">
						            <normal file="entry.svg"/>
						            <pos x="94" y="25" width="185" height="20" anchor="nw"/>
						            <fixed>
						              <item type="entry" id="user-pw-entry">
								<normal color="#000000" font="Sans 10"/>
						                <pos y="2" x="2" width="-4" height="-4" anchor="nw"/>
						              </item>
						            </fixed>
						          </item>

							
							<!-- Session Button -->
								<item type="rect" id="session_button" button="true">
										<pos x="20" y="176" width="100%" height="box" anchor="nw"/>
										<box>
											<item type="rect">
												<pos height="box" width="100%"/>
												<box spacing="5" xpadding="3" ypadding="2" orientation="horizontal">
													<item type="pixmap">
														<pos y="50%" width="24" height="24" anchor="w"/>
														<normal file="session.png"/>
														<prelight file="session-prelight.png"/>
														<active file="session-active.png"/>
													</item>
													<item type="label">
														<pos y="50%" width="50" height="20" anchor="w"/>
															<normal color="#dedede" font="Sans Bold 8"/>
														<prelight color="#efefef" font="Sans Bold 8"/>
														<active color="#e3e3e3" font="Sans Bold 8"/>
														<stock type="session"/>
													</item>
												</box>
											</item>
										</box>
									</item>

							<!-- Language Selection Button -->
									<item type="rect" id="language_button" button="true">
										<pos x="140" y="149" width="100%" height="box" anchor="nw"/>
										<box>
											<item type="rect">
												<pos height="box" width="100%"/>
												<box spacing="5" xpadding="3" ypadding="2" orientation="horizontal">
													<item type="pixmap">
														<pos y="50%" width="24" height="24" anchor="w"/>
														<normal file="language.png"/>
														<prelight file="language-prelight.png"/>
														<active file="language-active.png"/>
													</item>
													<item type="label">
														<pos y="50%" width="50" height="20" anchor="w"/>														<normal color="#dedede" font="Sans Bold 8"/>
														<prelight color="#efefef" font="Sans Bold 8"/>
														<active color="#e3e3e3" font="Sans Bold 8"/>
														<stock type="language"/>
													</item>
												</box>
											</item>
										</box>
									</item>

							<!-- actions button -->
								<item type="rect" id="system_button" button="true">
										<pos x="260" y="122" width="100%" height="box" anchor="nw"/>
										<show modes="console" type="system"/>
										<box>
											<item type="rect">
												<pos height="box" width="100%"/>
												<box spacing="5" xpadding="3" ypadding="2" orientation="horizontal">
													<item type="pixmap">
														<pos y="50%" width="24" height="24" anchor="w"/>
														<normal file="system.png"/>
														<prelight file="system-prelight.png"/>
														<active file="system-active.png"/>
													</item>
													<item type="label">
														<pos y="50%" width="50" height="20" anchor="w"/>
														<normal color="#dedede" font="Sans Bold 8"/>
														<prelight color="#efefef" font="Sans Bold 8"/>
														<active color="#e3e3e3" font="Sans Bold 8"/>
														<stock type="system"/>
													</item>
												</box>
											</item>
										</box>
									</item>
							<!-- Flexi - Quit, Remote - Disconnect -->
									<item type="rect" id="disconnect_button" button="true">
										<pos x="340" y="94" width="100%" height="box" anchor="nw"/>
										<show modes="flexi,remote"/>
										<box>
											<item type="rect">
												<pos height="box" width="100%"/>
												<box spacing="5" xpadding="3" ypadding="2" orientation="horizontal">
													<item type="pixmap">
														<pos y="50%" width="24" height="24" anchor="w"/>
														<show modes="remote"/>
														<normal file="disconnect.png"/>
														<prelight file="disconnect-prelight.png"/>
														<active file="disconnect-active.png"/>
													</item>
													<item type="pixmap">
														<pos y="50%" width="24" height="24" anchor="w"/>
														<show modes="flexi"/>
														<normal file="quit.png"/>
														<prelight file="quit-prelight.png"/>
														<active file="quit-active.png"/>
													</item>
												</box>
											</item>
										</box>
									</item>
					
						</box>
					</item>

				</box>
			</item>
			
		</box>
    </item>
	

	<!-- Caps Lock Warning -->
	<item type="rect" id="caps-lock-warning">
		<normal color="#000000" alpha="0.4"/>
		<pos anchor="c" x="50%" y="90%" width="box" height="box"/>
		<box orientation="vertical" min-width="250" xpadding="10" ypadding="5" spacing="0">
			<item type="label">
				<normal color="#ffffff" font="Sans 12"/>
				<pos x="50%" y="50%" anchor="c"/>
				<stock type="caps-lock-warning"/>
			</item>
		</box>
    </item>

    <!-- Login Erors -->
    <item type="rect" id="pam-error">
		<pos anchor="c" x="50%" y="90%" width="80%" height="box"/>
		<box orientation="vertical" xpadding="10" ypadding="5" spacing="0">
			<item type="label" id="pam-error">
				<normal color="#ffffff" font="Sans 10"/>
				<pos x="50%" y="50%" anchor="c"/>
                <text/>
			</item>
		</box>
    </item>


</greeter>
